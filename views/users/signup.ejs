<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- BOOTSTRAP -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <!-- Fontawesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/users-css/signup.css">
    <link rel="shortcut icon" href="https://i.imgur.com/OOQYC8l.png" type="image/x-icon">
    <title>Register</title>
</head>

<body>
    <!-- Nav Bar -->
    <div class="wrapper">
        
        <nav id="sidebar">
            
            <button class="dismiss btn btn-dark shadow-none" type="button" id="dismissSidebar" onclick="document.getElementById('sidebar').classList.toggle('active');">
                <span>Close</span>
                <i class="fa fa-bars"></i>
            </button>
            
            <div class="sidebar-header">
                <h2 class="nav-logo-title">
                    <img class="nav-logo-img" src="https://i.imgur.com/OOQYC8l.png" alt="GameHOC logo">
                    GameHOC
                </h2>
            </div>
            
            <ul class="page-list">
                <li class="">
                    <a href="/">Home</a>
                </li>
                <li>
                    <% if (user) { %>
                    <a href="#user-profile" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><%= user.username %></a>
                    <% } else { %>
                    <a href="#user-profile" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">User Profile</a>
                    <% } %>
                    <ul class="collapse user-list" id="user-profile">
                        <li>
                            <a href="/collections">My Collections</a>
                        </li>
                        <% if (user) { %>
                        <li>
                            <a href="/auth/logout">Log Out</a>
                        </li>
                        <% } else { %>
                        <li>
                            <a href="/login">Log In</a>
                        </li>
                        <li>
                            <a href="/signup">Sign Up</a>
                        </li>
                        <% } %>
                    </ul>
                </li>
                <li>
                    <a href="/">Newest Releases</a>
                </li>
                <li>
                    <a href="/">Top Rated</a>
                </li>
                <li>
                    <a href="/games">All Games</a>
                </li>
                <li>
                    <a href="#genres" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Genres</a>
                    <ul class="collapse genre-list" id="genres">
                        <li>
                            <a href="/games/genres/1">Racing</a>
                        </li>
                        <li>
                            <a href="/games/genres/2">Shooter</a>
                        </li>
                        <li>
                            <a href="/games/genres/4">Action</a>
                        </li>
                        <li>
                            <a href="/games/genres/5">RPG</a>
                        </li>
                        <li>
                            <a href="/games/genres/6">Fighting</a>
                        </li>
                        <li>
                            <a href="/games/genres/15">Sports</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
        
        <header>
            <button class="nav-a btn btn-dark shadow-none" type="button" id="sidebarCollapse" onclick="document.getElementById('sidebar').classList.toggle('active');">
                <i class="fa fa-bars"></i>
                <span>Navigation</span>
            </button>
            <div class="logo">
                <h2 class="logo-title">
                    <img class="logo-img" src="https://i.imgur.com/OOQYC8l.png" alt="">
                    <!-- GameHOC -->
                </h2>
            </div>
        </header>
        
        <main>
            <div class="signup-container">
                <h1 class="signup-title">Register</h1>
                <form class="signup-form" action="/auth/registration" method="POST">
                    
                    <!-- <label for="email" class="email-text">Email</label> -->
                    <input class="email" type="email" name="email" placeholder="Email" required />
                    
                    <!-- <label for="username" class="username-text">Username</label> -->
                    <input class="username" type="text" name="username" placeholder="Username" required />
                    
                    <!-- <label for="password" class="password-text">Password</label> -->
                    <input class="password" type="password" name="password" placeholder="Password" required />
                    
                    <button class="login-submit btn btn-dark shadow-none" type="submit">Create Account</button>
                </form>
            </div>
            
            <a class="signup-link" href="/login">Already have an account? Login here.</a>
        </main>
        
        
        <!-- BOOTSTRAP -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    </div>
</body>

</html>