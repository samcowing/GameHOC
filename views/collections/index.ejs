<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="/collections-css/index.css">
    <link rel="stylesheet" href="/collections-css/nav.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="shortcut icon" href="https://i.imgur.com/OOQYC8l.png" type="image/x-icon">
    <title>Collections Index</title>
</head>

<body>
    <div class="wrapper">
        <nav id="sidebar">
            
            <button class="dismiss btn btn-dark" type="button" id="dismissSidebar" onclick="document.getElementById('sidebar').classList.toggle('active');">
                <span>Close</span>
                <i class="fa fa-bars"></i>
            </button>
            
            <div class="sidebar-header">
                <h2 class="nav-logo-title">
                    <img class="nav-logo-img" src="https://i.imgur.com/OOQYC8l.png" alt="GameHOC logo">
                    GameHOC
                </h2>
            </div>
            
            <ul class="page-list">
                <li class="">
                    <a href="/">Home</a>
                </li>
                <li>
                    <a href="#user-profile" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">User Profile</a>
                    <ul class="collapse user-list" id="user-profile">
                        <li>
                            <a href="/collections">My Collections</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="/">Newest Releases</a>
                </li>
                <li>
                    <a href="/">Top Rated</a>
                </li>
                <li>
                    <a href="/games">All Games</a>
                </li>
                <li>
                    <a href="#genres" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Genres</a>
                    <ul class="collapse genre-list" id="genres">
                        <li>
                            <a href="/games/genres/1">Racing</a>
                        </li>
                        <li>
                            <a href="/games/genres/2">Shooter</a>
                        </li>
                        <li>
                            <a href="/games/genres/4">Action</a>
                        </li>
                        <li>
                            <a href="/games/genres/5">RPG</a>
                        </li>
                        <li>
                            <a href="/games/genres/6">Fighting</a>
                        </li>
                        <li>
                            <a href="/games/genres/15">Sports</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
        
        <header>
            <button class="nav-a btn btn-dark" type="button" id="sidebarCollapse" onclick="document.getElementById('sidebar').classList.toggle('active');">
                <i class="fa fa-bars"></i>
                <span>Navigation</span>
            </button>
            <div class="logo">
                <h2 class="logo-title">
                    <img class="logo-img" src="https://i.imgur.com/OOQYC8l.png" alt="GameHOC logo">
                    GameHOC
                </h2>
            </div>
        </header>
        
        <div class="head-container">
            <div class="body-head-container">
                <div class="body-head-title">
                    <h1>My Collections</h1>
                </div>
                <div class="body-head-items">
                    <div class="body-head-collCount">
                        <p>Collections No: <%= collections.length %></p>
                    </div>
                    <div class="body-head-newColl">
                        <p><a class="newCollLink" href="/collections/new">Start a new collection</a></p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="games-container">
            <% for (let i=0; i < collections.length; i++) { %>
            <div class="card-deck">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">
                            <a class="card-title-link" href="/collections/<%= collections[i]._id %>">
                                <%= collections[i].title %>
                            </a>
                        </h3>
                        <p>Created on: <%= moment(collections[i].createdAt).format("LLLL") %></p>
                        <h4>
                            <%= collections[i].games.length %>
                        </h4>
                        <p>Games</p>
                        <% if (collections[i].games.length > 1) { %>
                        <% for (let j = 0; j < 2; j++) { %>
                        <img src="<%= collections[i].games[j].image %>">
                        <% } %>
                        <% } %>
                        <% if (collections[i].games.length === 1) { %>
                        <% for (let j = 0; j < 1; j++) { %>
                        <img src="<%= collections[i].games[j].image %>">
                        <% } %>
                        <% } %>
                        <% if (collections[i].games.length === 0) { %>
                        <img class="empty" src=https://i.imgur.com/lsEr7sG.png>
                        <% } %>
                        <div class="buttonContainer">
                            <form method="POST" action="/collections/<%=collections[i]._id%>?_method=DELETE">
                                <input class="delete" type="submit" value="Delete Collection">
                            </form>
                            <a class="edit" href="/collections/<%=collections[i]._id%>/edit">Edit Collection</a> <br />
                            <a class="edit" href="/collections/<%=collections[i]._id%>">View Collection</a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
        
        <!-- BOOTSTRAP -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    </div>
</body>

</html>