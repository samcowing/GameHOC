<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <title>Collections Index</title>
</head>

<body>
    <h1>All Collections Page</h1>

    <a href="/collections/new">Make new collection</a>
    <% for (let i=0; i < collections.length; i++) { %>

        <div class="card-deck">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">
                        <a href="/collections/<%= collections[i]._id %>">
                            <%= collections[i].title %>
                        </a>
                    </h3>
                    <p>
                        <%= collections[i].description %>
                    </p>
                    <p>
                        Number of games in collection: <%= collections[i].games.length %>
                    </p>
                    <% if (collections[i].games.length > 0) { %>
                        <% for (let j = 0; j < collections[i].games.length; j++) { %>
                            <ul>
                                <li><%= collections[i].games[j].name %></li>
                            </ul>
                        <% } %>
                    <% } %>
                    <div>
                        <form method="POST" action="/collections/<%=collections[i]._id%>?_method=DELETE">
                            <input type="submit" value="delete this collection" >
                        </form>
                        <a href="/collections/<%=collections[i]._id%>/edit">Edit this collection</a> <br/>  
                        <a href="/collections/<%=collections[i]._id%>/addgames">Add Games</a>  
                    </div>
            </div>
        </div>

    <% } %>

    <!-- BOOTSTRAP -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
        crossorigin="anonymous"></script>

</body>

</html>